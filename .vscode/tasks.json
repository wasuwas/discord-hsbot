{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"group": "build",
			"label": "tsc:build",
			"presentation": {
				"reveal": "silent",
				"close": true
			}
		},
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": "build",
			"label": "tsc: watch_tsconfig.json"
		},
		{
            "label": "Typescipt compile",
            "type": "shell",
            "command": "tsc -p .",
			"presentation": {
				"reveal": "silent",
				"close": true
			}
        }
	]
}